{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "typeRoots": ["node_modules/@types", "types/custom.d.ts"]
  },
  "include": ["types", "main/**/*", "localization/**/*", "js/**/*", "pages/**/*", "reader/**/*"],
  "exclude": ["node_modules"]
}
